        // Input validation
        document.getElementById('agentId').addEventListener('input', function(e) {
            // Limit to 10 characters
            if (this.value.length > 10) {
                this.value = this.value.slice(0, 10);
            }
        });

        document.getElementById('attendance').addEventListener('input', function(e) {
            // Allow only letters and spaces, max 20 characters
            this.value = this.value.replace(/[^a-zA-Z\s]/g, '').substring(0, 20);
        });

        // Add input validation for sale field
        document.getElementById('sale').addEventListener('input', function(e) {
            // Allow only letters, numbers, and spaces, max 20 characters
            this.value = this.value.replace(/[^a-zA-Z0-9\s]/g, '').substring(0, 20);
        });

        // Add input validation for numeric fields
        const numericFields = ['connectedCalls', 'ordersPlaced', 'successful', 'pending', 'cancelled', 'overwritten'];
        numericFields.forEach(fieldId => {
            document.getElementById(fieldId).addEventListener('input', function(e) {
                // Allow only numbers, max 4 digits
                this.value = this.value.replace(/\D/g, '').substring(0, 4);
            });
        });

        // Add event listener for date picker change
        document.getElementById('datePicker').addEventListener('change', function() {
            loadExcelData();
        });
    </script>
</body>
</html>
