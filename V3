    <!-- Firebase SDK -->
    <script src="https://www.gstatic.com/firebasejs/9.22.0/firebase-app-compat.js"></script>
    <script src="https://www.gstatic.com/firebasejs/9.22.0/firebase-firestore-compat.js"></script>
    <script src="https://www.gstatic.com/firebasejs/9.22.0/firebase-auth-compat.js"></script>
    
    <script>
        // Your Firebase configuration
        const firebaseConfig = {
            apiKey: "AIzaSyCnhVN4BJTeOiDWpuL_eVPQLjIy9DXqB5A",
            authDomain: "agentrp.firebaseapp.com",
            projectId: "agentrp",
            storageBucket: "agentrp.firebasestorage.app",
            messagingSenderId: "930887247422",
            appId: "1:930887247422:web:c0281d3500fa2b0b5dd36f"
        };
        
        // Initialize Firebase
        firebase.initializeApp(firebaseConfig);
        const db = firebase.firestore();
        const auth = firebase.auth();
        
        let currentAgent = null;
        let currentHalf = '';
        let currentFilter = 'first-half';
        let currentReportId = null;
        let isAuthenticating = false;
        let allReports = [];
        
        // Set initial UI based on authentication state
        window.addEventListener('load', function() {
            // Show loading animation initially
            document.getElementById('loadingOverlay').style.display = 'flex';
            
            // Hide both containers initially to prevent flash
            document.getElementById('loginContainer').style.display = 'none';
            document.getElementById('reportContainer').style.display = 'none';
            
            // Set current half based on time of day
            setCurrentHalf();
            
            // Set today's date as default in date picker
            const today = new Date().toISOString().split('T')[0];
            document.getElementById('datePicker').value = today;
            
            // Check authentication state
            const savedAgent = localStorage.getItem('currentAgent');
            if (savedAgent) {
                try {
                    currentAgent = JSON.parse(savedAgent);
                    // Try to sign in with cached credentials for faster login
                    auth.signInAnonymously()
                        .then(() => {
                            hideLoading();
                            showReportUI();
                            checkExistingReport();
                        })
                        .catch(() => {
                            hideLoading();
                            showLoginUI();
                        });
                } catch (e) {
                    hideLoading();
                    showLoginUI();
                }
            } else {
                // Add a small delay to show loading animation for at least 1 second
                setTimeout(() => {
                    hideLoading();
                    showLoginUI();
                }, 1000);
            }
        });
        
        function hideLoading() {
            document.getElementById('loadingOverlay').style.display = 'none';
        }
        
        // Set current half based on time
        function setCurrentHalf() {
            const now = new Date();
            const hours = now.getHours();
            
            // First half: 9AM to 4PM (9 to 16)
            // Second half: 4PM to 12AM (16 to 24)
            if (hours >= 9 && hours < 16) {
                currentHalf = 'first';
            } else if (hours >= 16 || hours < 0) {
                currentHalf = 'second';
            } else {
                // Outside working hours, default to first half
                currentHalf = 'first';
            }
        }
        
        // Set current date
        function setCurrentDate() {
            const now = new Date();
            const options = { weekday: 'long', year: 'numeric', month: 'long', day: 'numeric' };
            document.getElementById('currentDate').textContent = now.toLocaleDateString('en-US', options);
        }
        
        function selectHalf(half) {
            currentHalf = half;
            updateHalfUI();
            checkExistingReport();
        }
        
        function updateHalfUI() {
            const firstHalfBtn = document.getElementById('firstHalfBtn');
            const secondHalfBtn = document.getElementById('secondHalfBtn');
            const now = new Date();
            const hours = now.getHours();
            
            // Reset both buttons
            firstHalfBtn.classList.remove('active');
            secondHalfBtn.classList.remove('active');
            
            // Activate the selected button
            document.querySelector(`[data-half="${currentHalf}"]`).classList.add('active');
            
            // Enable/disable based on current time
            const isFirstHalfActive = (hours >= 9 && hours < 16);
            const isSecondHalfActive = (hours >= 16 || hours < 0);
            
            // Enable input fields for the active half, disable for the other
            const inputFields = document.querySelectorAll('#reportTab .stat-box input');
            
            if (currentHalf === 'first') {
                inputFields.forEach(field => field.disabled = !isFirstHalfActive);
                firstHalfBtn.disabled = false;
                secondHalfBtn.disabled = !isSecondHalfActive;
            } else {
                inputFields.forEach(field => field.disabled = !isSecondHalfActive);
                firstHalfBtn.disabled = !isFirstHalfActive;
                secondHalfBtn.disabled = false;
            }
            
            // Also disable buttons if outside working hours
            if (!isFirstHalfActive && !isSecondHalfActive) {
                inputFields.forEach(field => field.disabled = true);
                firstHalfBtn.disabled = true;
                secondHalfBtn.disabled = true;
            }
        }
        
        function setFilter(filter) {
            currentFilter = filter;
            
            // Update filter UI
            document.querySelectorAll('.filter-btn').forEach(btn => {
                btn.classList.remove('active');
            });
            document.querySelector(`[data-filter="${filter}"]`).classList.add('active');
            
            // Filter and render the table
            filterReports();
        }
        
        function filterReports() {
            let filteredReports = [];
            
            if (currentFilter === 'first-half') {
                filteredReports = allReports.filter(report => report.half === 'first');
            } else if (currentFilter === 'second-half') {
                filteredReports = allReports.filter(report => report.half === 'second');
            }
            
            renderExcelTable(filteredReports);
        }
        
        function switchTab(tabName) {
            // Update tabs
            document.querySelectorAll('.tab').forEach(tab => {
                tab.classList.remove('active');
            });
            document.querySelector(`[data-tab="${tabName}"]`).classList.add('active');
            
            // Show selected tab content
            if (tabName === 'report') {
                document.getElementById('reportTab').style.display = 'block';
                document.getElementById('excelTab').style.display = 'none';
            } else {
                document.getElementById('reportTab').style.display = 'none';
                document.getElementById('excelTab').style.display = 'block';
                loadExcelData();
            }
        }
        
        function showLoginUI() {
            document.getElementById('loginContainer').style.display = 'block';
            document.getElementById('reportContainer').style.display = 'none';
            localStorage.removeItem('currentAgent');
            currentAgent = null;
        }
        
        function showReportUI() {
            document.getElementById('loginContainer').style.display = 'none';
            document.getElementById('reportContainer').style.display = 'block';
            document.getElementById('agentName').textContent = currentAgent ? currentAgent.name : 'Agent';
            setCurrentDate();
            updateHalfUI();
            
            // Add animation
            document.getElementById('reportContainer').classList.add('animate-fadeIn');
        }
        
        function showStatus(message, isSuccess) {
            const statusElement = document.getElementById('statusMessage');
            statusElement.textContent = message;
            statusElement.className = isSuccess ? 'status-message status-success' : 'status-message status-error';
            statusElement.style.display = 'block';
            
            setTimeout(() => {
                statusElement.style.display = 'none';
            }, 3000);
        }
        
        function showLogoutModal() {
            document.getElementById('logoutModal').classList.add('active');
        }
        
        function hideLogoutModal() {
            document.getElementById('logoutModal').classList.remove('active');
        }
        
        // Handle modal clicks - close when clicking outside the modal content
        function handleModalClick(event) {
            if (event.target.id === 'logoutModal') {
                hideLogoutModal();
            }
        }
        
        function confirmLogout() {
            // Hide the modal first
            hideLogoutModal();
            
            // Show logout animation
            document.getElementById('loadingOverlay').style.display = 'flex';
            
            setTimeout(() => {
                auth.signOut().then(() => {
                    hideLoading();
                    showLoginUI();
                });
            }, 1000);
        }
        
        function loginAgent() {
            const agentId = document.getElementById('agentId').value;
            const loginBtn = document.getElementById('loginButton');
            
            if (!agentId) {
                showStatus('Please enter your Agent ID', false);
                return;
            }
            
            // Validate max length
            if (agentId.length > 10) {
                showStatus('Agent ID must be 10 characters or less', false);
                return;
            }
            
            // Show loading animation on button
            const originalText = loginBtn.innerHTML;
            loginBtn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Logging in...';
            loginBtn.disabled = true;
            
            // Verify agent ID
            verifyAgentId(agentId).then(agentData => {
                if (agentData) {
                    currentAgent = agentData;
                    localStorage.setItem('currentAgent', JSON.stringify(agentData));
                    
                    // Sign in with Firebase anonymously
                    auth.signInAnonymously()
                        .then(() => {
                            // Show success message
                            loginBtn.innerHTML = '<i class="fas fa-check checkmark"></i> Login Successful!';
                            setTimeout(() => {
                                loginBtn.innerHTML = originalText;
                                loginBtn.disabled = false;
                                showReportUI();
                                checkExistingReport();
                            }, 1500);
                        })
                        .catch(error => {
                            loginBtn.innerHTML = originalText;
                            loginBtn.disabled = false;
                            showStatus('Login error: ' + error.message, false);
                        });
                } else {
                    loginBtn.innerHTML = originalText;
                    loginBtn.disabled = false;
                    showStatus('Invalid Agent ID', false);
                }
            });
        }
        
        function checkExistingReport() {
            if (!currentAgent) return;
            
            const today = new Date().toISOString().split('T')[0];
            const reportRef = db.collection('reports')
                .where('agentId', '==', currentAgent.id)
                .where('date', '==', today)
                .where('half', '==', currentHalf);
            
            reportRef.get().then(snapshot => {
                if (!snapshot.empty) {
                    // Existing report found
                    const reportData = snapshot.docs[0].data();
                    currentReportId = snapshot.docs[0].id;
                    
                    // Fill the form with existing data
                    document.getElementById('attendance').value = reportData.attendance || '';
                    document.getElementById('connectedCalls').value = reportData.connectedCalls || 0;
                    document.getElementById('ordersPlaced').value = reportData.ordersPlaced || 0;
                    document.getElementById('successful').value = reportData.successful || 0;
                    document.getElementById('pending').value = reportData.pending || 0;
                    document.getElementById('cancelled').value = reportData.cancelled || 0;
                    document.getElementById('overwritten').value = reportData.overwritten || 0;
                    document.getElementById('sale').value = reportData.sale || '';
                    
                    // Show update button instead of save
                    document.getElementById('saveButton').style.display = 'none';
                    document.getElementById('updateButton').style.display = 'block';
                    
                    showStatus('Loaded existing report for this half', true);
                } else {
                    // No existing report
                    resetForm();
                    document.getElementById('saveButton').style.display = 'block';
                    document.getElementById('updateButton').style.display = 'none';
                    currentReportId = null;
                }
            }).catch(error => {
                console.error('Error checking existing report:', error);
            });
        }
        
        function resetForm() {
            document.getElementById('attendance').value = '';
            document.getElementById('connectedCalls').value = 0;
            document.getElementById('ordersPlaced').value = 0;
            document.getElementById('successful').value = 0;
            document.getElementById('pending').value = 0;
            document.getElementById('cancelled').value = 0;
            document.getElementById('overwritten').value = 0;
            document.getElementById('sale').value = '';
        }
        
        function saveReport() {
            if (!currentAgent) {
                showStatus('Please login first', false);
                return;
            }
            
            const attendanceValue = document.getElementById('attendance').value;
            if (!attendanceValue) {
                showStatus('Please enter attendance status', false);
                return;
            }
            
            const reportData = {
                agentId: currentAgent.id,
                agentName: currentAgent.name,
                teamLeader: currentAgent.teamLeader,
                date: new Date().toISOString().split('T')[0],
                half: currentHalf,
                attendance: attendanceValue,
                connectedCalls: parseInt(document.getElementById('connectedCalls').value) || 0,
                ordersPlaced: parseInt(document.getElementById('ordersPlaced').value) || 0,
                successful: parseInt(document.getElementById('successful').value) || 0,
                pending: parseInt(document.getElementById('pending').value) || 0,
                cancelled: parseInt(document.getElementById('cancelled').value) || 0,
                overwritten: parseInt(document.getElementById('overwritten').value) || 0,
                sale: document.getElementById('sale').value || '',
                timestamp: firebase.firestore.FieldValue.serverTimestamp()
            };
            
            // Add animation
            const saveBtn = document.getElementById('saveButton');
            const originalText = saveBtn.innerHTML;
            saveBtn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Saving...';
            saveBtn.disabled = true;
            
            db.collection('reports').add(reportData)
                .then(docRef => {
                    currentReportId = docRef.id;
                    document.getElementById('saveButton').style.display = 'none';
                    document.getElementById('updateButton').style.display = 'block';
                    
                    // Show success animation
                    saveBtn.innerHTML = '<i class="fas fa-check checkmark"></i> Saved!';
                    setTimeout(() => {
                        saveBtn.innerHTML = originalText;
                        saveBtn.disabled = false;
                    }, 1500);
                    
                    showStatus('Report saved successfully!', true);
                })
                .catch(error => {
                    console.error('Error saving report:', error);
                    showStatus('Error saving report: ' + error.message, false);
                    
                    // Reset button
                    saveBtn.innerHTML = originalText;
                    saveBtn.disabled = false;
                });
        }
        
        function updateReport() {
            if (!currentReportId) {
                showStatus('No report to update', false);
                return;
            }
            
            const attendanceValue = document.getElementById('attendance').value;
            if (!attendanceValue) {
                showStatus('Please enter attendance status', false);
                return;
            }
            
            const updatedData = {
                attendance: attendanceValue,
                connectedCalls: parseInt(document.getElementById('connectedCalls').value) || 0,
                ordersPlaced: parseInt(document.getElementById('ordersPlaced').value) || 0,
                successful: parseInt(document.getElementById('successful').value) || 0,
                pending: parseInt(document.getElementById('pending').value) || 0,
                cancelled: parseInt(document.getElementById('cancelled').value) || 0,
                overwritten: parseInt(document.getElementById('overwritten').value) || 0,
                sale: document.getElementById('sale').value || '',
                updatedAt: firebase.firestore.FieldValue.serverTimestamp()
            };
            
            // Add animation
            const updateBtn = document.getElementById('updateButton');
            const originalText = updateBtn.innerHTML;
            updateBtn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Updating...';
            updateBtn.disabled = true;
            
            db.collection('reports').doc(currentReportId).update(updatedData)
                .then(() => {
                    // Show success animation
                    updateBtn.innerHTML = '<i class="fas fa-check checkmark"></i> Updated!';
                    setTimeout(() => {
                        updateBtn.innerHTML = originalText;
                        updateBtn.disabled = false;
                    }, 1500);
                    
                    showStatus('Report updated successfully!', true);
                })
                .catch(error => {
                    console.error('Error updating report:', error);
                    showStatus('Error updating report: ' + error.message, false);
                    
                    // Reset button
                    updateBtn.innerHTML = originalText;
                    updateBtn.disabled = false;
                });
        }
        
        function loadExcelData() {
            const selectedDate = document.getElementById('datePicker').value;
            
            const reportsRef = db.collection('reports')
                .where('date', '==', selectedDate);
            
            reportsRef.get().then(snapshot => {
                allReports = [];
                snapshot.forEach(doc => {
                    allReports.push(doc.data());
                });
                
                filterReports();
                showStatus(`Loaded ${allReports.length} reports for ${selectedDate}`, true);
            }).catch(error => {
                console.error('Error loading reports:', error);
                showStatus('Error loading reports: ' + error.message, false);
            });
        }
        
        function refreshTeamReport() {
            // Set date picker to today
            const today = new Date().toISOString().split('T')[0];
            document.getElementById('datePicker').value = today;
            
            // Reload data
            loadExcelData();
        }
        
        function renderExcelTable(reports) {
            const tableBody = document.querySelector('#excelTable tbody');
            
            if (reports.length === 0) {
                tableBody.innerHTML = '<tr><td colspan="12" style="text-align: center; padding: 20px;">No reports found for the selected filter</td></tr>';
                return;
            }
            
            let tableHTML = '';
            
            reports.forEach(report => {
                const status = report.attendance && report.attendance !== '' ? 'Submitted' : 'Pending';
                
                tableHTML += `
                    <tr>
                        <td>${report.agentId}</td>
                        <td>${report.agentName}</td>
                        <td>${report.teamLeader}</td>
                        <td>${report.attendance || '-'}</td>
                        <td>${report.connectedCalls || '0'}</td>
                        <td>${report.ordersPlaced || '0'}</td>
                        <td>${report.successful || '0'}</td>
                        <td>${report.pending || '0'}</td>
                        <td>${report.cancelled || '0'}</td>
                        <td>${report.overwritten || '0'}</td>
                        <td>${report.sale || '-'}</td>
                        <td>${status}</td>
                    </tr>
                `;
            });
            
            tableBody.innerHTML = tableHTML;
        }
        
